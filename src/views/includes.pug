mixin feature(name)
  div(class="pure-g")
    div(class="pure-u-1 pure-u-sm-1-3")
      h3= name
    div(class="pure-u-1 pure-u-sm-2-3")
      block
  hr

mixin teamMember(name, role, image)
  div(class="pure-u-1 pure-u-sm-1-2")
    div(class="card")
      div(class="pure-u-1-4")
      div(class="pure-u-1-2")
        img(class="pure-img rounded" src=image)
      div(class="pure-u-1-4")
      h3= name
      p= role
